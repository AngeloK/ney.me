<%= render "entries/header" %>
<div class="container">
	<div class="row">
		<div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
			<h2>Log in</h2>
			<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
				<div class="form-inputs">
					<%= f.input :email, required: false, autofocus: true, placeholder: "Email"%>
					<%= f.input :password, required: false, placeholder: "Password" %>
					<%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
				</div>
				<div class="form-actions">
					<%= f.button :submit, "Log in" %>
				</div>
				<%= link_to "Forgot your password?", new_password_path(resource_name), :id => 'forget-password' %><br />
			<% end %>
		</div>
	</div>
</div>
